<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/mEdtName"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="25dp"
        android:hint="Enter name"
        app:layout_constraintBottom_toTopOf="@+id/mEdtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mEdtEmail"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:hint="Enter Email"
        app:layout_constraintBottom_toTopOf="@+id/mBtnEdtNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtName" />

    <TextView
        android:id="@+id/mBtnEdtNumber"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginBottom="68dp"
        android:hint="Enter ID Number"
        app:layout_constraintBottom_toTopOf="@+id/mBtnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtEmail" />

    <Button
        android:id="@+id/mBtnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="332dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mBtnSave"
        app:layout_constraintTop_toBottomOf="@+id/mBtnSave" />

    <Button
        android:id="@+id/mBtnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="21dp"
        android:text="SAVE"
        app:layout_constraintBottom_toTopOf="@+id/mBtnDelete"
        app:layout_constraintEnd_toStartOf="@+id/mBtnView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnEdtNumber" />

    <Button
        android:id="@+id/mBtnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="21dp"
        android:text="View"
        app:layout_constraintBottom_toTopOf="@+id/mBtnDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mBtnSave" />
</androidx.constraintlayout.widget.ConstraintLayout>